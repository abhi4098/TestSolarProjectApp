<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/solar_blue"/>
    <item>
        <bitmap android:src="@drawable/login_background" android:gravity="center" android:alpha="0.1"/>
    </item>

    <item android:top="220dp"
        android:bottom="-220dp"
        android:left="0dp"
        android:right="-220dp">
        <rotate
            android:fromDegrees="-10"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="?android:colorBackground"/>
            </shape>
        </rotate>
    </item>
</layer-list>