<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/resister_button_color</item>
        <item name="android:activatedBackgroundIndicator">@drawable/drawer_list_selector</item>
        <item name="colorControlHighlight">@color/request_background</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:textSize">16sp</item><!-- text size in menu-->
        <item name="android:textStyle">normal</item>

        <!--<item name="android:listPreferredItemHeightSmall">40dp</item>&lt;!&ndash; item size in menu&ndash;&gt;
        <item name="listPreferredItemHeightSmall">40dp</item> item size in menu-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolBar" parent="AppTheme">
        <item name="android:color">#0ba3ad</item>
        <item name="android:textColorSecondary">#ffffff</item>
    </style>

    <style name="Divider_light_gray">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#7e7e7e</item>
    </style>

    <style name="Divider_black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#000000</item>
    </style>

    <style name="Divider_white">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#ffffff</item>
    </style>


    <style name="CustomProgressBarHorizontalBlue" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/blue_progress</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="CustomProgressBarHorizontalPink" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/pink_progress</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="CustomProgressBarHorizontalYellow" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/yellow_progress</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
</resources>

