<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"

    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/ll_line_design"
        android:orientation="vertical"

        android:background="@color/solar_pink"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/heading_color"
            android:text="Spare Part - "/>

        <TextView
            android:id="@+id/spare_part_name"
            android:layout_width="wrap_content"
            android:textColor="@color/approval_pending_background"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Spare Part Brand"/>

        <TextView
            android:id="@+id/spare_part_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Spare Part Id"/>

        <TextView
            android:id="@+id/spare_part_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Status"/>

        <TextView
            android:id="@+id/spare_part_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="140sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Spare Part Price"/>

        <TextView
            android:id="@+id/spare_part_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:background="@color/list_background_color"
        android:layout_marginTop="20dp">


        <TextView
            android:id="@+id/approve_button"
            android:layout_width="wrap_content"
            android:layout_toStartOf="@+id/view_detail_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/solar_green"
            android:layout_marginStart="20dp"
            android:layout_height="25dp"
            android:layout_marginEnd="20dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Approve"/>

        <TextView
            android:id="@+id/view_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/approval_pending_background"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:text="View Details"/>

        <!--<Button
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_button_with_curves_blue"
            android:layout_height="25dp"
            android:text="Reject"/>-->
    </RelativeLayout>
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
