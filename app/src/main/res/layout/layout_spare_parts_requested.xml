</LinearLayout>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/view_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/rectangular_button_with_curves_pink"
            android:layout_alignParentEnd="true"
            android:text="View Details"/>
        <Button
            android:id="@+id/approve_button"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/view_detail_button"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangular_button_with_curves_green"
            android:layout_height="25dp"
            android:text="Approve"/>

        <!--<Button
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_button_with_curves_blue"
            android:layout_height="25dp"
            android:text="Reject"/>-->
    </RelativeLayout>

</LinearLayout>

    </android.support.v7.widget.CardView>