<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/shadow_layout"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_pink"
            android:text="Spare Part: "/>

        <TextView
            android:id="@+id/spare_part_name"
            android:layout_width="wrap_content"
            android:textColor="@color/solar_pink"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Spare Part Brand: "/>

        <TextView
            android:id="@+id/spare_part_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Spare Part Id: "/>

        <TextView
            android:id="@+id/spare_part_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Status Name "/>

        <TextView
            android:id="@+id/spare_part_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Spare Part Price "/>

        <TextView
            android:id="@+id/spare_part_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="State: "/>

        <TextView
            android:id="@+id/user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/view_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/rectangular_button_with_curves_pink"
            android:layout_alignParentStart="true"
            android:text="View Details"/>
        <Button
            android:id="@+id/approve_button"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/view_detail_button"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangular_button_with_curves_orange"
            android:layout_height="25dp"
            android:text="Assign"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_button_with_curves_blue"
            android:layout_height="25dp"
            android:text="Reject"/>
    </RelativeLayout>

</LinearLayout>
