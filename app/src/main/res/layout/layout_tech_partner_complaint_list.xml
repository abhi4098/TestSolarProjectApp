<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    app:cardMaxElevation="3dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/solar_pink"
            android:text="Complaint: "/>

        <TextView
            android:id="@+id/complaint_name"
            android:layout_width="wrap_content"
            android:textColor="@color/solar_pink"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Project Owner: "/>

        <TextView
            android:id="@+id/project_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="End Consumer: "/>

        <TextView
            android:id="@+id/end_consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Project Type: "/>

        <TextView
            android:id="@+id/project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="State: "/>

        <TextView
            android:id="@+id/user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:visibility="gone"
            android:background="@drawable/rectangular_button_with_curves_blue"
            android:layout_height="25dp"
            android:text="Close"/>

        <Button
            android:id="@+id/reject_button"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:background="@drawable/rectangular_button_with_curves_blue"
            android:layout_height="25dp"
            android:text="Reject"/>

        <Button
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/reject_button"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            android:layout_marginStart="20dp"
            android:background="@drawable/rectangular_button_with_curves_green"
            android:layout_height="25dp"
            android:text="Accept"/>

        <Button
            android:id="@+id/view_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textColor="@color/white"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/rectangular_button_with_curves_pink"
            android:layout_alignParentEnd="true"
            android:text="View Details"/>



    </RelativeLayout>
    <Button
        android:id="@+id/request_spare_part_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:background="@drawable/rectangular_button_with_curves_orange"
        android:layout_height="25dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Request Spare Part"/>
</LinearLayout>
</android.support.v7.widget.CardView>