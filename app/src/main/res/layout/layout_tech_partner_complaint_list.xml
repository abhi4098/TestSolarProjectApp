<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="3dp"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/solar_pink"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/complaint_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/solar_pink"
            android:text="Complaint: "/>

        <TextView
            android:id="@+id/complaint_name"
            android:layout_width="wrap_content"
            android:textColor="@color/solar_pink"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Project Owner"/>

        <TextView
            android:id="@+id/project_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Puja"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="End Consumer"/>

        <TextView
            android:id="@+id/end_consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Anjali Sharma"
            />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/solar_blue"
            android:text="Project Type"/>

        <TextView
            android:id="@+id/project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Solor roof top"
            />
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="State: "/>

        <TextView
            android:id="@+id/user_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            />
    </LinearLayout>


</LinearLayout>-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:background="@color/silver"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:textColor="@color/solar_blue"
            android:visibility="gone"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="15sp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="CLOSE"/>

        <TextView
            android:id="@+id/reject_button"
            android:layout_width="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/solar_yellow"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="REJECT"/>

        <TextView
            android:id="@+id/accept_button"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/reject_button"
            android:layout_centerHorizontal="true"
            android:textColor="@color/solar_green"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="ACCEPT"/>

        <TextView
            android:id="@+id/view_detail_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/solar_pink"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:text="VIEW DETAILS"/>



    </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="start"
            android:background="@color/silver"
            >
    <TextView
        android:id="@+id/request_spare_part_button"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:textColor="@color/solar_yellow"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:layout_gravity="center_vertical"
        android:paddingEnd="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="REQUEST SPARE PART"/>
        </RelativeLayout>
</LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>