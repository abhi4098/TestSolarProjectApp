<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    android:layout_marginBottom="5dp"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:id="@+id/ll_line_design"
         android:orientation="vertical"
        android:background="@color/complaint_recieved_background"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"

        >
        <TextView
            android:id="@+id/complaint_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"

            android:textColor="@color/heading_color"
            android:text="Complaint - "/>

        <TextView
            android:id="@+id/complaint_name"
            android:layout_width="wrap_content"
            android:textColor="@color/approval_pending_background"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Project Owner "/>

        <TextView
            android:id="@+id/project_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/request_background"
            android:textSize="15sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="End Consumer "/>

        <TextView
            android:id="@+id/end_consumer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"

            />

    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="130sp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/heading_color"
                android:text="Project Type "/>

            <TextView
                android:id="@+id/project_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/request_background"
                />
        </LinearLayout>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:text="State: "/>

            <TextView
                android:id="@+id/user_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                />
        </LinearLayout>


    </LinearLayout>-->

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:layout_gravity="start"
    android:background="@color/list_background_color"
    android:layout_marginTop="20dp">
    <TextView
        android:id="@+id/assign_button"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:textColor="@color/solar_yellow"
        android:layout_gravity="end"
        android:layout_centerVertical="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="ASSIGN TECH PARTNER"/>

    <TextView
        android:id="@+id/approve_button"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_toEndOf="@+id/assign_button"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/solar_green"
        android:layout_marginStart="10dp"
        android:layout_height="wrap_content"
        android:text="APPROVE"/>

    <TextView
        android:id="@+id/view_detail_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/approval_pending_background"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:text="VIEW DETAILS"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:textColor="@color/solar_blue"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:text="REJECT"/>
</RelativeLayout>
</LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
