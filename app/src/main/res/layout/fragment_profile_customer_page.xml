                android:textColor="@color/black"
                android:lines="1"
                android:textSize="20sp"
                android:text="Solar Roof Top"

                />-->

            <TextView
                android:id="@+id/project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:textStyle="normal"
                android:layout_marginEnd="20sp"
                android:layout_below="@+id/project_owner"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:lines="1"
                android:textSize="18sp"
                android:visibility="gone"


                />

        </RelativeLayout>

        <TextView
            android:id="@+id/project_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:gravity="center"
            android:paddingBottom="5sp"
            android:paddingTop="5sp"
            android:visibility="gone"
            android:textColor="@color/heading_color"
            android:textSize="20sp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="horizontal"
            android:weightSum="1"

            >


            <LinearLayout
                android:id="@+id/breakdown"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_weight=".5"

                >

                <RelativeLayout

                    android:layout_width="140sp"
                    android:layout_height="140sp"
                    android:layout_margin="10sp"

                    android:background="@drawable/circular_open_complaints_background"

                    >
                <ImageView
                    android:id="@+id/breakdown_icon"
                    android:layout_width="40dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/braekdown"
                    android:layout_height="40dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/breakdown_icon"
                    android:textSize="14sp"

                    android:textColor="@color/white"
                    android:text="Breakdown"/>
                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/preventive_maintainace"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_marginTop="10sp"
                android:orientation="vertical"
                android:layout_weight=".5"

                >

                <RelativeLayout
                    android:layout_width="140sp"
                    android:layout_height="140sp"
                    android:layout_margin="10sp"
                    android:background="@drawable/circular_overdue_complaints_background"

                    >
                    <ImageView
                        android:id="@+id/preventive_icon"
                        android:layout_width="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/white"
                        android:background="@drawable/preventivemaintenance"
                        android:layout_height="40dp" />
                    <TextView
                        android:id="@+id/preventive_heading"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="14sp"

                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/preventive_icon"
                        android:textColor="@color/white"
                        android:text="Preventive"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_centerHorizontal="true"
                        android:textSize="14sp"

                        android:layout_below="@+id/preventive_heading"
                        android:textColor="@color/white"
                        android:text="Maintenance"/>
                </RelativeLayout>

            </LinearLayout>


