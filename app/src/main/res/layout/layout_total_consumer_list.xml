<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    >
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        >

    <LinearLayout
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:background="@color/solar_pink"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:textColor="@color/heading_color"
            android:text="Consumer Name: "/>

        <TextView
            android:id="@+id/consumer_name"
            android:layout_width="wrap_content"
            android:textColor="@color/approval_pending_background"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Email Id"/>

        <TextView
            android:id="@+id/consumer_email_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Contact No"/>

        <TextView
            android:id="@+id/consumer_contact_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Project Owner"/>

        <TextView
            android:id="@+id/consumer_project_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/request_background"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
        <TextView
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/heading_color"
            android:text="Project Type"/>

        <TextView
            android:id="@+id/consumer_project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
           android:textColor="@color/request_background"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="3dp"

        android:orientation="horizontal">
            <TextView
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/heading_color"
                android:text="Consumer Add"/>

            <TextView
                android:id="@+id/consumer_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/request_background"
                />
        </LinearLayout>



</LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>